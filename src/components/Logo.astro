---
const { layout } = Astro.props as Props;

type Layout = 'navbar' | 'sidebar';

interface Props {
  layout: Layout
}

const classesMap: Record<Layout, string> = {
  navbar: 'px-2 py-1 md:text-3xl text-sm sm:text-md',
  sidebar: 'px-4 py-2 md:text-4xl text-md sm: text-lg',
}

const classes = classesMap[layout];
---

<span class={`uppercase font-black text-white bg-black ${classes} -rotate-2`}>Marcelo_Sarinho</span>