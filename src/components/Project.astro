---
const { name, description, photo, url } = Astro.props;
---
<a href={url} rel="noopener" target="_blank">
  <div class="mb-6 lg:h-96 bg-white border-4 brutal-shadow-lg hover:-translate-x-1 hover:-translate-y-1 transition-all">
    <img class="size-full" src={photo} alt={`Imagem do projeto ${name}`}>
  </div>

  <h1 class="bg-white dark:bg-neutral-800 dark:text-neutral-300 uppercase font-bold tracking-tight text-3xl">{name}</h1>
  <p class="bg-white dark:bg-neutral-800 dark:text-neutral-300 text-md font-medium">{description}</p>
</a>